body {
  color: #444;
  font-family: Helvetica, Arial, sans-serif;
  font-size: 0.9em;
  line-height: 1.4;
}

h1, h2, h3, h4, h5 {
  font-weight: normal;
  color: #999;
}

h1 {
  background: #FFF;
  color: #900;
  padding: 0;
  margin: 0;
  font-size: 2em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  position: fixed;
  top: 0;
  left: 32%;
  right: 0%;
}

  h1 span {
    padding: 0.5em 0 0.25em 50px;
    margin: 0;
    display: block;
    border-bottom: 2px solid #EEE;
  }

h2 {
  margin: 0;
}

  div.day h2 {
    margin-left: -32px;
    padding-left: 32px;
    background: url(/images/icons/large/calendar.png) no-repeat left;
  }

h3 {
  clear: both;
}

p {
  margin: 0.5em 0 1em 0;
}

  p.meta {
    margin: 0 0 1em 0;
    color: #999;
    text-align: left;
  }

    p.meta span {
      padding: 0 20px;
    }

    p.meta span.author {
      background: url(/images/icons/small/user.png) no-repeat left;
    }
  
    p.meta span.when {
      background: url(/images/icons/small/calendar.png) no-repeat left;
    }
  
    p.meta span.comments {
      background: url(/images/icons/small/comment.png) no-repeat left;
    }

a {
  color: #090;
  text-decoration: none;
}

a:hover {
  color: #900 !important;
  text-decoration: underline;
}

hr {
  height: 1px;
  clear: both;
  border: none;
  margin: 0;
  padding: 0;
}

.button {
  cursor: pointer;
  display: inline-block;
  background-color: #e6e6e6;
  background-repeat: no-repeat;
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), color-stop(25%, #ffffff), to(#e6e6e6));
  background-image: -webkit-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -moz-linear-gradient(top, #ffffff, #ffffff 25%, #e6e6e6);
  background-image: -ms-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -o-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#e6e6e6', GradientType=0);
  padding: 5px 14px 6px;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
  color: #333;
  font-size: 13px;
  line-height: normal;
  border: 1px solid #ccc;
  border-bottom-color: #bbb;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -webkit-transition: 0.1s linear all;
  -moz-transition: 0.1s linear all;
  -ms-transition: 0.1s linear all;
  -o-transition: 0.1s linear all;
  transition: 0.1s linear all;
}

.button:hover {
  background-position: 0 -15px;
  color: #333;
  text-decoration: none;
}