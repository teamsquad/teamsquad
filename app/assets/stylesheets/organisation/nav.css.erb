div#secondary {
  
}

  div#secondary ul {
    display: block;
    padding: 0;
    margin: 0;
    width: 50%;
    height: 100%;
    background: #333;
    list-style: none;
  }
  
  div#secondary li {
    display: block;
    background: #444 url('/images/selected-nav-1.png') no-repeat right;
    padding: 0;
    margin: 0 0 0 10px;
    color: #FFF;
  }
  
  div#secondary li a {
    color: #FFF;
    display: block;
    background-color: #333;
    -webkit-transition: 0.1s linear all;
    -moz-transition: 0.1s linear all;
    -ms-transition: 0.1s linear all;
    -o-transition: 0.1s linear all;
    transition: 0.1s linear all;
  }
  
    div#secondary li span {
      padding: 8px 20px 8px 28px;
      background-position: 6px 0.65em;
      background-repeat: no-repeat;
      display: block;
    }
    
    div#secondary a span {
      opacity: 0.5;
      font-weight: normal;
    }
    
    div#secondary a:hover {
      text-decoration: none;
    }
    
    div#secondary li a:hover span {
      opacity: 1.0;
      color: #EEE;
      -webkit-transition: 0.1s linear all;
      -moz-transition: 0.1s linear all;
      -ms-transition: 0.1s linear all;
      -o-transition: 0.1s linear all;
      transition: 0.1s linear all;
    }
  
    div#secondary ul ul {
      position: absolute;
      top: 0%;
      left: 50%;
      width: 50%;
      background: #CCC;
      overflow: auto;
    }
    
    div#secondary li li span {
      color: #333;
    }
  
    div#secondary li li {
      background: #DDD url('/images/selected-nav-2.png') no-repeat right;
    }
  
    div#secondary li li a {
      background-color: #CCC;
      color: #000;
    }
    
      div#secondary li li a:hover span {
        color: #111;
      }

