html {
  height: 100%;
}

body {
  background: #FFF;
  color: #333;
  padding: 0;
  margin: 0;
  height: 100%;
}

  #search {
    display: none;
  }
  
  #admin {
    position: fixed;
    top: 0.75em;
    right: 50px;
  }

#content {
  padding: 1em 0 0 32%;
  overflow: hidden;
}

  div#primary {
    position: relative;
    padding: 5em 50px 20px 50px;
  }

  div#secondary {
    position: fixed;
    left: 0;
    top: 0;
    width: 32%;
    height: 100%;
  }
  
#foot {
  clear: both;
  padding: 1em 0;
  font-size: smaller;
  border-top: 2px solid #DDD;
  min-height: 8em;
  
  display: none;
}

div.groups {
  overflow: hidden;
}

  div.league_stage_with_groups div.group {
    float: left;
    width: 48%;
  }
  
	div.league_stage_with_groups div.odd {
    clear: both;
  }

  div.league_stage_with_groups div.even {
    float: right;
  }