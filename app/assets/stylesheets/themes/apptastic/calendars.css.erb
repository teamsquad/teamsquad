table.calendar {
  margin: 0;
  background: #F8F8F8;
  width: 48%;
  border: 2px solid #F4F4F4;
}

  table.odd {
    float: left;
  }
  
  table.even {
    float: right;
  }

  table.calendar caption {
    font-weight: bold;
    padding-bottom: 4px;
    font-size: 1.2em;
    text-align: left;
  }

  table.calendar th {
    text-align: center;
    padding: 4px;
  }

  table.calendar td {
    color: #CCC;
    background: #FFF;
    padding: 4px;
    text-align: center;
    font-size: 1.1em;
  }

  table.calendar td a {
    font-weight: bold;
  }

  table.calendar td.outmonth {
    color: #EEE;
    background: #F8F8F8;
  }

  table.calendar td.active {
    background: #900;
  }
