div#secondary {
  
}

  div#menu {
    width: 30%;
    float: right;
  }

  div#secondary ul {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
    div#secondary ul ul {
      margin: 0 0 0 24px;
      padding: 0;
      float: none;
      width: auto;
    }
  
  div#secondary li {
    display: block;
    padding: 0;
    margin: 0;
    color: #900;
    font-weight: bold;
  }
  
  div#secondary li a {
    display: block;
    font-weight: normal;
    opacity: 0.5%;
  }
  
    div#secondary li a:hover {
      opacity: 1;
    }
  
  div#secondary span {
    display: block;
    margin: 0;
    padding: 0.33em 0 0.33em 24px;
    background-repeat: no-repeat;
    background-position: 0 0.33em;
  }

  div#secondary li.home            span { background-image: url(/images/icons/small/home.png); }
  div#secondary li.teams           span { background-image: url(/images/icons/small/team.png); }
  div#secondary li.notice          span { background-image: url(/images/icons/small/notice.png); }
  div#secondary li.information     span { background-image: url(/images/icons/small/information.png); }
  div#secondary li.edit            span { background-image: url(/images/icons/small/edit.png); }
  div#secondary li.page            span { background-image: url(/images/icons/small/page.png); }
  div#secondary li.competition     span { background-image: url(/images/icons/small/competition.png); }
  div#secondary li.overview        span { background-image: url(/images/icons/small/overview.png); }
  
  div#secondary li.fixtures        span { background-image: url(/images/icons/small/fixtures.png); }
  div#secondary li.results         span { background-image: url(/images/icons/small/results.png); }
  div#secondary li.calendar        span { background-image: url(/images/icons/small/calendar.png); }
  div#secondary li.stage           span { background-image: url(/images/icons/small/stage.png); }
