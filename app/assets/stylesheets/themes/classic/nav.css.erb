  div#secondary ul {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 1.1em;
  }
  
  div#secondary li {
    display: block;
    padding: 0;
    margin: 0 20% 0 0;
    color: #900;
    font-weight: bold;
  }
  
  div#secondary li a {
    display: block;
    font-weight: normal;
    opacity: 0.5;
    -webkit-transition: opacity 0.2s linear;
  }
  
  div#secondary li span,
  div#secondary li a:hover span {
    display: block;
    margin: 1px 0 1px -6px;
    padding: 0.5em 0 0.5em 28px;
    color: #333;
    background-repeat: no-repeat;
    background-position: 6px 0.5em;
    border-radius: 4px;
  }
  
  div#secondary li a span {
    color: #090;
  }
  
  div#secondary li a:hover {
    text-decoration: none;
    opacity: 1;
  }

