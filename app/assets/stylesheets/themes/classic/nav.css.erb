.breadcrumb { 
  font-family: "Helvetica", Arial, sans-serif;
  display: block;
  padding: 0;
  margin: 1em 0;
  list-style: none; 
  overflow: hidden;
  font-size: 0.85em;
  font-weight: 400;
  border: 2px solid #EEE;
  background: #EEE;
  border-radius: 4px;
  float: left;
  white-space: nowrap;
  max-width: 100%;
}

.breadcrumb li { 
  float: left;
}

.breadcrumb span {
  display: block;
  overflow: hidden;
  max-width: 32px;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.breadcrumb li:last-child span {
  max-width: 250px;
}

@media only screen and (min-width: 480px) {
  .breadcrumb span {
    max-width: 200px;
  }
}

@media only screen and (min-width: 568px) {
  .breadcrumb span {
    max-width: 300px;
  }
}

.breadcrumb li a {
  color: #090;
  text-decoration: none; 
  padding: 0.5em 0 0.5em 25px;
  background: #EFE; 
  position: relative; 
  display: block;
  float: left;
}

  

.breadcrumb li a:after { 
  content: " "; 
  display: block; 
  width: 0; 
  height: 0;
  border-top: 25px solid transparent;           /* Go big on the size, and let overflow hide */
  border-bottom: 25px solid transparent;
  border-left: 15px solid #EFE;
  position: absolute;
  top: 50%;
  margin-top: -25px; 
  left: 100%;
  z-index: 2; 
} 

.breadcrumb li a:before { 
  content: " "; 
  display: block; 
  width: 0; 
  height: 0;
  border-top: 25px solid transparent;           /* Go big on the size, and let overflow hide */
  border-bottom: 25px solid transparent;
  border-left: 15px solid #CFC;
  position: absolute;
  top: 50%;
  margin-top: -25px; 
  margin-left: 1px;
  left: 100%;
  z-index: 1; 
} 

.breadcrumb li:first-child a {
  padding-left: 1em;
  font-weight: 600;
}


.breadcrumb li:last-child a {
  background: white !important;
  color: #090;
  pointer-events: none;
  cursor: default;
  border-left-color: #FFF;
  padding-right: 1em;
}

.breadcrumb li:last-child a { color: #900; padding-right: 20px; font-weight: 600; }
.breadcrumb li a:hover { color: #900; }

