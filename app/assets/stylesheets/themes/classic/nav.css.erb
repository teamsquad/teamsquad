div#menu {
  position: fixed;
  width: 100%;
  margin: 0;
  background: #333;
  height: 3.2em;
  border-bottom: 2px solid #FFF;
  z-index: 20;
}


  div#menu ul {
    display: block;
    list-style: none;
    margin: 0 0 0 -4px;
    padding: 0;
    overflow: hidden;
  }
  
    div#menu li {
      display: block;
      margin: 0 1px 0 0;
      padding: 0;
      float: left;
    }
    
    div#menu li.login,
    div#menu li.logout {
      float: right;
    }

    div#menu span {
      display: block;
      font-weight: bold;
      color: #FFF;
      padding: 0.4em 16px 0.4em 26px;
      margin: 0.5em 2px 0 2px;
      background-color: #000;
      background-repeat: no-repeat;
      background-position: 4px 0.5em;
      border-radius: 4px;
    }
    
    div#menu a:hover {
      text-decoration: none;
    }
    
    div#menu a span {
      background-color: #333;
      color: #EEE;
      opacity: 0.5;
    }
    
    div#menu a:hover span {
      opacity: 1;
    }

