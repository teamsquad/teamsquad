div#menu {
  position: fixed;
  left: 0;
  right: 0;
  margin: 0;
  background: rgba(0, 0, 0, 0.66);
  height: 3.2em;
  border-bottom: 3px solid #DDD;
  z-index: 20;
}

  div#menu ul {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }
  
    div#menu li {
      display: block;
      margin: 0 1px 0 0;
      padding: 0 0 0.75em 0;
      float: left;
    }

    div#menu li.login,
    div#menu li.logout {
      float: right;
    }
    
      body.organisation li.home,
      body.information li.information,
      body.team li.teams,
      body.competition li.competition,
      body.stage li.competition,
      body.group li.competition {
        background: url(/images/selected-nav-2.png) no-repeat;
      }

      body.organisation div#menu li.home a span,
      body.information div#menu li.information a span,
      body.team div#menu li.teams a span,
      body.competition div#menu li.competition a span,
      body.stage div#menu li.competition a span,
      body.group div#menu li.competition a span{
        color: #FFF;
        opacity: 1;
      }

    div#menu span {
      display: block;
      font-weight: bold;
      color: #FFF;
      padding: 0.4em 16px 0.4em 22px;
      margin: 0.5em 2px 0 2px;
      background-repeat: no-repeat;
      background-position: 0 0.5em;
    }
    
    div#menu a:hover {
      text-decoration: none;
    }
    
    div#menu a span {
      color: #EEE;
      opacity: 0.5;
      -webkit-transition: opacity 0.2s linear;
    }
    
    div#menu a:hover span {
      opacity: 1;
    }

