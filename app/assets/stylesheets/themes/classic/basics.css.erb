body {
  color: #444;
  font-size: 0.9em;
  line-height: 1.4;
  font-family: "Cabin Sketch", Helvetica, Arial, sans-serif; 
  font-weight: 400;
}

h1, h2, h3, h4, h5, legend, caption {
  font-family: "Cabin Sketch", "Helvetica neue", Helvetica, Arial, sans-serif; 
  font-weight: normal;
  font-weight: 400;
}

header {
  color: #333;
  padding-bottom: 0;
  margin: 0 -2%;
  border-top: 3px solid #900;
}

  @media only screen and (min-height: 640px) {
    header {
      position: fixed;
      background: #FFF;
      top: 0;
      left: 0;
      right: 0;
      z-index: 15;
      margin: 0;
    }
    
    #foot {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 25%;
      z-index: 15;
      background: #FFF;
    }
  }

h1 {
  margin: 0;
  padding: 0.2em 0 0.4em 0.3em;
  clear: both;
  font-size: 2.75em;
  line-height: 1;
}

h1 strong {
  color: #900;
  font-weight: normal;
}

h1 span {
  display: none;
}

  @media only screen and (min-width: 568px) {
    h1 span {
      display: inline;
    }
  }

h2 {
  font-size: 1.8em;
  margin: 0.33em 0 0 0;
  color: #900;
}

  div.day h2 {
    margin-left: -32px;
    padding-left: 32px;
    background: url(/images/icons/large/calendar.png) no-repeat left;
  }
  
  h2 + p,
  h3 + p {
    margin-top: 0;
  }
  
  #secondary h2 {
    color: #999;
    font-size: 1.33em;
    margin: 0 0 0.5em 0;
  }

h3 {
  font-size: 1.3em;
  margin: 0 0 0.5em 0;
}

h4 {
  font-size: 1.2em;
}

p {
  margin: 1em 0;
  color: #666;
}

  p.more {
    text-align: right;
  }

  p.meta {
    margin: 1em 0;
    color: #999;
    text-align: left;
  }

    p.meta span {
      padding: 0 20px;
    }

    p.meta span.author {
      background: url(/images/icons/small/user.png) no-repeat left;
    }
  
    p.meta span.when {
      background: url(/images/icons/small/calendar.png) no-repeat left;
    }
  
    p.meta span.comments {
      background: url(/images/icons/small/comment.png) no-repeat left;
    }

a {
  color: #090;
  text-decoration: none;
  -webkit-transition: color 0.2s linear;
}

a:hover {
  color: #900;
  text-decoration: underline;
}

hr {
  height: 1px;
  clear: both;
  border: none;
  margin: 0;
  padding: 0;
}

.admin a,
a.admin {
  font-weight: bold;
}

div.initially_hidden {
  display: none;
}

div.standout {
  font-weight: bold;
  background: #F8F8F8;
  padding: 1em;
  margin:  0 0 1em 0;
}

  div.standout p {
    margin: 0;
  }

div.image {
  float: right;
  padding: 5px;
  border: 2px solid #EEE;
}

  div.image img {
    display: block;
    margin: 0;
    padding: 0;
    line-height: 1;
  }

ul.teams {
  list-style: none;
  margin: 1em 0;
  padding: 0;
  overflow: hidden;
}

  ul.teams li {
    margin: 0;
    padding: 0.33em 0;
    background: url(/images/icons/small/team.png) no-repeat left;
    float: left;
    width: 49%;
    text-indent: 24px;
  }

div.competition {
  clear: both;
  padding-bottom: 1em;
  overflow: hidden;
}

  div.competition h2 {
    margin: 0 0 0.5em 0;
  }

div.competition ul.stages {
  list-style: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

  div.competition li.stage {
    float: left;
    width: 8em;
    text-align: center;
    margin: 0 5px 1em 0;
    padding: 0 0 0 20px;
    background: url(/images/selected-nav-1.png) no-repeat left;
  }
  
    div.competition li.pos1 {
      padding: 0;
      background: none;
    }
  
  div.competition li.stage a {
    display: block;
    background: rgba(0, 128, 0, 0.95);
    color: #FFF;
    padding: 1.7em 8px;
    border-radius: 5px;
  }
  
    div.competition li.stage a:hover {
      color: #FFF !important;
      background: #900;
    }

.button {
  cursor: pointer;
  display: inline-block;
  background-color: #FFF;
  padding: 3px 12px 5px 12px;
  color: #090;
  line-height: normal;
  background: #EFE;
  border: 2px solid #DED;
  box-shadow: 0 2px 2px #EEE;
  font-family: "Cabin Sketch", Helvetica, Arial, sans-serif; 
}

.button:hover {
  color: #333;
  text-decoration: none;
}