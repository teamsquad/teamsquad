body {
  background: #EEE url(/images/bg.png);
  color: #444;
  font-family: Helvetica, Arial, sans-serif;
  font-size: 0.8em;
  line-height: 1.4;
}

h1, h2, h3, h4, h5, legend, caption {
  font-family: 'Arial Rounded MT Bold', Helvetica, Arial, sans-serif;
  font-weight: normal;
  color: #999;
}

h1 {
  background: inherit;
  color: #900;
  padding: 1.5em 0 0.2em 0;
  margin: 0;
  font-size: 2em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  position: fixed;
  top: 1.25em;
  left: 0;
  right: 0;
  z-index: 15;
}

  h1.depth2,
  h1.depth3 {
    top: 0.75em;
  }

  h1.depth2 .title0,
  h1.depth3 .title0,
  h1.depth4 .title0 {
    font-size: 0.5em;
    display: block;
  }
  
  h1 .title0 {

  }
  
  h1 .title1 {
    color: #333;
  }
  
  h1 .title2 {
    font-weight: normal;
    color: #666;
  }

h2 {
  font-size: 1.5em;
  margin: 0.5em 0 0 0;
}

  div.day h2 {
    margin-left: -44px;
    padding-left: 48px;
    background: url(/images/icons/large/calendar.png) no-repeat left;
  }

h3 {
  font-size: 1.4em;
}

h4 {
  font-size: 1.2em;
}

p {
  margin: 0.5em 0 1em 0;
  color: #666;
}

  p.meta {
    margin: 0 0 1em 0;
    color: #999;
    text-align: left;
  }

    p.meta span {
      padding: 0 20px;
    }

    p.meta span.author {
      background: url(/images/icons/small/user.png) no-repeat left;
    }
  
    p.meta span.when {
      background: url(/images/icons/small/calendar.png) no-repeat left;
    }
  
    p.meta span.comments {
      background: url(/images/icons/small/comment.png) no-repeat left;
    }

a {
  color: #090;
  text-decoration: none;
}

a:hover {
  color: #900 !important;
  text-decoration: underline;
}

hr {
  height: 1px;
  clear: both;
  border: none;
  margin: 0;
  padding: 0;
}

.admin a,
a.admin {
  font-weight: bold;
}

div.initially_hidden {
  display: none;
}

div.standout {
  font-weight: bold;
  background: #FFF;
  padding: 1em;
  margin:  0 0 1em 0;
  border-radius: 5px;
  border: 2px solid #F4F4F4;
}

  div.standout p {
    margin: 0;
  }

ul.teams {
  list-style: none;
  margin: 0 0 1em 0;
  padding: 0;
}

  ul.teams li {
    margin: 0;
    padding: 0.33em 0;
    background: url(/images/icons/small/team.png) no-repeat left;
    float: left;
    width: 49%;
    text-indent: 24px;
  }

div.competition {
  clear: both;
  padding-bottom: 1em;
  overflow: hidden;
}

  div.competition h2 {
    margin: 0 0 0 12px;
  }

div.competition .blurb {
  float: left;
  width: 33%;
  text-align: justify;
  border-radius: 5px;
  background: #FFF;
  padding: 0.33em 1em 0.15em 1em;
  border: 2px solid #F4F4F4;
}

div.competition ul.stages {
  list-style: none;
  margin: 0;
  padding: 0 0 0 2em;
  overflow: hidden;
}

  div.competition li.stage {
    float: left;
    width: 8em;
    text-align: center;
    margin: 0 5px 0 0;
    padding: 0 0 0 20px;
    background: url(/images/selected-nav-1.png) no-repeat left;
  }
  
    div.competition li.pos1 {
      padding: 0;
      background: none;
    }
  
  div.competition li.stage a {
    display: block;
    background: rgba(0, 128, 0, 0.95);
    color: #FFF;
    padding: 1.7em 8px;
    border-radius: 5px;
  }
  
    div.competition li.stage a:hover {
      color: #FFF !important;
      background: #900;
    }
  

.button {
  cursor: pointer;
  display: inline-block;
  background-color: #e6e6e6;
  background-repeat: no-repeat;
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), color-stop(25%, #ffffff), to(#e6e6e6));
  background-image: -webkit-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -moz-linear-gradient(top, #ffffff, #ffffff 25%, #e6e6e6);
  background-image: -ms-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -o-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#e6e6e6', GradientType=0);
  padding: 3px 8px;
  font-size: 13px;
  line-height: 18px;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
  color: #090;
  line-height: normal;
  border: 1px solid #ccc;
  border-bottom-color: #bbb;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -webkit-transition: 0.1s linear all;
  -moz-transition: 0.1s linear all;
  -ms-transition: 0.1s linear all;
  -o-transition: 0.1s linear all;
  transition: 0.1s linear all;
}

.button:hover {
  color: #333;
  text-decoration: none;
}