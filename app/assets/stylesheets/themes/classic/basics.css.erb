body {
  color: #444;
  font-size: 0.8em;
  line-height: 1.4;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
  font-weight: 300;
}

h1, h2, h3, h4, h5, legend, caption {
  font-weight: normal;
}

header {
  background: #FFF;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  padding-bottom: 1.25em;
  margin: 0;
  white-space: nowrap;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 15;
  border-bottom: 2px solid #EEE;
}

h1 {
  margin: 0;
  padding: 0.2em 0 0 0.33em;
  clear: both;
  font-size: 2.75em;
  line-height: 1;
}

h1 strong {
  color: #900;
  font-weight: normal;
}

h2 {
  font-size: 1.5em;
  margin: 0.5em 0 0 0;
  color: #900;
}

  div.day h2 {
    margin-left: -50px;
    padding-left: 50px;
    background: url(/images/icons/large/calendar.png) no-repeat left;
  }
  
  h2 + p,
  h3 + p {
    margin-top: 0;
  }
  
  #secondary h2 {
    color: #CCC;
    font-size: 1.33em;
  }

h3 {
  font-size: 1.3em;
  margin: 0 0 0.5em 0;
}

h4 {
  font-size: 1.2em;
}

p {
  margin: 1em 0;
  color: #666;
}

  p.more {
    text-align: right;
  }

  p.meta {
    margin: 1em 0;
    color: #999;
    text-align: left;
  }

    p.meta span {
      padding: 0 20px;
    }

    p.meta span.author {
      background: url(/images/icons/small/user.png) no-repeat left;
    }
  
    p.meta span.when {
      background: url(/images/icons/small/calendar.png) no-repeat left;
    }
  
    p.meta span.comments {
      background: url(/images/icons/small/comment.png) no-repeat left;
    }

a {
  color: #090;
  text-decoration: none;
  -webkit-transition: color 0.2s linear;
}

a:hover {
  color: #900;
  text-decoration: underline;
}

hr {
  height: 1px;
  clear: both;
  border: none;
  margin: 0;
  padding: 0;
}

.admin a,
a.admin {
  font-weight: bold;
}

div.initially_hidden {
  display: none;
}

div.standout {
  font-weight: bold;
  background: #FFF;
  padding: 1em;
  margin:  0 0 1em 0;
  border-radius: 5px;
  border: 2px solid #EEE;
}

  div.standout p {
    margin: 0;
  }

div.image {
  float: right;
  padding: 5px;
  border: 2px solid #EEE;
}

  div.image img {
    display: block;
    margin: 0;
    padding: 0;
    line-height: 1;
  }

ul.teams {
  list-style: none;
  margin: 1em 0;
  padding: 0;
  overflow: hidden;
}

  ul.teams li {
    margin: 0;
    padding: 0.33em 0;
    background: url(/images/icons/small/team.png) no-repeat left;
    float: left;
    width: 49%;
    text-indent: 24px;
  }

div.competition {
  clear: both;
  padding-bottom: 1em;
  overflow: hidden;
}

  div.competition h2 {
    margin: 0 0 0.5em 0;
  }

div.competition ul.stages {
  list-style: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

  div.competition li.stage {
    float: left;
    width: 8em;
    text-align: center;
    margin: 0 5px 1em 0;
    padding: 0 0 0 20px;
    background: url(/images/selected-nav-1.png) no-repeat left;
  }
  
    div.competition li.pos1 {
      padding: 0;
      background: none;
    }
  
  div.competition li.stage a {
    display: block;
    background: rgba(0, 128, 0, 0.95);
    color: #FFF;
    padding: 1.7em 8px;
    border-radius: 5px;
  }
  
    div.competition li.stage a:hover {
      color: #FFF !important;
      background: #900;
    }

.button {
  cursor: pointer;
  display: inline-block;
  background-color: #e6e6e6;
  background-repeat: no-repeat;
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), color-stop(25%, #ffffff), to(#e6e6e6));
  background-image: -webkit-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -moz-linear-gradient(top, #ffffff, #ffffff 25%, #e6e6e6);
  background-image: -ms-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: -o-linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  background-image: linear-gradient(#ffffff, #ffffff 25%, #e6e6e6);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#e6e6e6', GradientType=0);
  padding: 3px 8px;
  font-size: 13px;
  line-height: 18px;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
  color: #090;
  line-height: normal;
  border: 1px solid #ccc;
  border-bottom-color: #bbb;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);
  -webkit-transition: 0.1s linear all;
  -moz-transition: 0.1s linear all;
  -ms-transition: 0.1s linear all;
  -o-transition: 0.1s linear all;
  transition: 0.1s linear all;
}

.button:hover {
  color: #333;
  text-decoration: none;
}