table.calendar {
  margin: 0 0 2em 0;
  background: #EEE;
  background: rgba(0,0,0, 0.05);
  border: 8px solid rgba(0, 0, 0, 0);
  line-height: 1;
  border-radius: 5px;
}

  table.odd {
    float: left;
  }
  
  table.even {
    float: right;
  }

  table.calendar caption {
    font-weight: normal;
    padding: 0 0 8px 0.66em;
    font-size: 1.5em;
    text-align: left;
  }

  table.calendar th {
    text-align: center;
    padding: 4px;
  }

  table.calendar td {
    color: #999;
    background: #FFF;
    padding: 8px 4px;
    text-align: center;
    font-size: 1.1em;
    border-radius: 2px;
  }

  table.calendar td a {
    background: #090;
    color: #FFF;
    display: block;
    padding: 8px 4px;
    margin: -8px -4px;
    border-radius: 2px;
  }
  
  table.calendar td a:hover {
    background: #900;
    color: #FFF;
  }

  table.calendar td.outmonth {
    color: #CCC;
    background: inherit;
  }

  table.calendar td.active {
    background: #900;
  }
