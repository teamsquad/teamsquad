div.calendars {
  overflow: hidden;
}

table.calendar {
  margin: 0 0 2em 0;
  background: #F8F8F8;
  border: 8px solid rgba(0, 0, 0, 0);
  line-height: 1;
  border-radius: 2px;
  width: 100%;
}

  @media only screen and (min-width: 600px) {
    table.calendar {
      width: 48%;
    }
    
    table.odd {
      float: left;
    }

    table.even {
      float: right;
    }
  }

  table.calendar caption {
    font-weight: normal;
    padding: 0 0 8px 0.5em;
    font-size: 2em;
    text-align: left;
    line-height: 1.5;
  }

  table.calendar th {
    text-align: center;
    padding: 4px;
  }

  table.calendar td {
    color: #999;
    background: #FFF;
    padding: 8px 4px;
    text-align: center;
    font-size: 1.1em;
  }

  table.calendar td a {
    background: #090;
    color: #FFF;
    display: block;
    padding: 8px 4px;
    margin: -8px -4px;
  }
  
  table.calendar td a:hover {
    background: #900;
    color: #FFF;
  }

  table.calendar td.outmonth {
    color: #CCC;
    background: inherit;
  }

  table.calendar td.active {
    background: #900;
  }
