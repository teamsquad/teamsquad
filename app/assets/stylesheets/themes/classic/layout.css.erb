html {
  margin: 0;
  padding: 0;
  background: #FFF;
  height: 100%;
}

body {
  background: none;
  padding: 0;
  margin: 0;
  text-align: left;
  min-width: 320px;
  min-height: 100%;
}

#search {
  display: none;
}

#content {
  min-height: 400px;
  text-align: left;
}

  @media only screen and (min-height: 640px) {
    #content {
      padding-top: 8.5em;
    }
    
    #primary {
      padding-bottom: 6em;
    }
  }

  div#primary {
    clear: both;
    z-index: 12;
  }
  
  div#secondary {
    z-index: 13;
  }
    
    #menu span {
      width: 2px;
      overflow: hidden;
      text-indent: 50px;
    }
    
    div#menu li {
      background-position: -1px 100%;
    }

#foot {
  clear: both;
  padding-top: 1em;
  padding-bottom: 1em;
}

  #foot p {
    margin: 0;
  }
  
  @media only screen and (max-width: 600px) {
    #foot {
      padding-bottom: 4em;
    }
  }

div.page {
  padding: 1em;
  background: #FFF;
  margin: 0 0 1em 0;
}

div.groups {
  overflow: visible;
}

  div.group,
  div.day,
  div.empty {
    padding: 0;
    background: #FFF;
    margin: 0 0 1em 0;
    box-sizing: border-box;
  }
  
  div.day,
  div.empty {
    padding: 0 1em;
  }
  
  div.group h2 {
    margin: 0.25em 0 0 0.5em;
  }

#menu,
header,
#content,
#foot {
  padding-left: 2%;
  padding-right: 2%;
}

#foot h2,
#foot p {
  margin: 0 1rem;
}

@media only screen and (min-width: 568px) {

  #menu span {
    width: auto;
    text-indent: 0;
  }
  
  div#menu li {
    background-position: bottom center;
  }
}

@media only screen and (min-width: 801px) {
  
  div#primary {
    position: relative;
    width: 67%;
    float: left;
  }
  
  div#secondary {
    position: fixed;
    top: 8em;
    right: 2%;
    bottom: 0;
    left: 70%;
    z-index: 13;
  }
  
  div#secondary {
    left: 70%;
    right: 4%;
  }
  
  body {
    background-repeat: no-repeat;
    background-position: 95% 85%;
    background-attachment: fixed;
    background-size: 20%;
  }
  
  body.sport1 { background-image: url(/images/football1.png); }
  body.competition.sport1 { background-image: url(/images/football2.png); }
  body.stage.sport1 { background-image: url(/images/football3.png); }
}

@media only screen and (min-width: 768px) {
  
  #menu,
  header,
  #content,
  #foot {
    padding-left: 4%;
    padding-right: 4%;
  }
  
  div.league_stage_with_groups div.group {
    float: left;
    width: 48%;
  }
  
  div.league_stage_with_groups div.odd {
    clear: both;
  }

  div.league_stage_with_groups div.even {
    float: right;
  }
  
  table.calendar {
    width: 49%;
  }
  
  #search {
    display: block;
    position: fixed;
    top: 8px;
    left: 70%;
    right:10%;
    z-index: 50;
  }
}

@media only screen and (min-width: 1280px) {
  
  #menu,
  header,
  #content,
  #foot {
    padding-left: 4%;
    padding-right: 4%;
  }
  
  div#secondary {
    right: 4%;
  }
}
