html {
  margin: 0;
  padding: 0;
  background: #F4F4F4 url(/images/bg.png);
  background-attachment: fixed;
  height: 100%;
}

body {
  background: none;
  padding: 0;
  margin: 0;
  text-align: left;
  min-width: 320px;
  min-height: 100%;
}

#search {
  display: none;
}

#content {
  padding: 10.5em 0 0 0;
  min-height: 400px;
  text-align: left;
}

  div#primary {
    clear: both;
    z-index: 12;
  }
  
  div#secondary {
    z-index: 13;
  }
    
    #menu span {
      width: 2px;
      overflow: hidden;
      text-indent: 50px;
    }
    
    div#menu li {
      background-position: -1px 100%;
    }

#foot {
  clear: both;
  padding-top: 2em;
  padding-bottom: 1em;
}

  #foot p {
    margin: 0;
  }

div.page {
  padding: 1em;
  border-radius: 5px;
  background: #FFF;
  margin: 0 0 1em 0;
  border: 2px solid #EEE;
}

div.groups {
  overflow: visible;
}

  div.group,
  div.day {
    padding: 0 1em;
    border-radius: 5px;
    background: #FFF;
    margin: 0 0 1em 0;
    border: 2px solid #EEE;
    box-sizing: border-box;
  }
  
  div.group h2 {
    margin-top: 0.5em;
  }

#menu,
header,
#content,
#foot {
  padding-left: 2%;
  padding-right: 2%;
}

@media only screen and (min-width: 568px) {

  #menu span {
    width: auto;
    text-indent: 0;
  }
  
  div#menu li {
    background-position: bottom center;
  }
}

@media only screen and (min-width: 768px) {
  
  div#primary {
    position: relative;
    width: 68%;
    float: left;
  }
  
  div#secondary {
    position: fixed;
    top: 10em;
    right: 2%;
    bottom: 0;
    left: 70%;
    z-index: 13;
  }
  
  body {
    background-repeat: no-repeat;
    background-position: 95% 95%;
    background-attachment: fixed;
    background-size: 20%;
  }
  
  body.sport1 { background-image: url(/images/football1.png); }
}

@media only screen and (min-width: 1000px) {
  
  #menu,
  header,
  #content,
  #foot {
    padding-left: 5%;
    padding-right: 5%;
  }
  
  div#secondary {
    left: 68%;
    right: 5%;
  }
  
  div.league_stage_with_groups div.group {
    float: left;
    width: 49%;
  }
  
  div.league_stage_with_groups div.odd {
    clear: both;
  }

  div.league_stage_with_groups div.even {
    float: right;
  }
  
  table.calendar {
    width: 49%;
  }
  
  #search {
    display: block;
    position: fixed;
    top: 6em;
    left: 68%;
    right: 15%;
    z-index: 50;
  }
}

@media only screen and (min-width: 1280px) {
  
  #menu,
  header,
  #content,
  #foot {
    padding-left: 8%;
    padding-right: 8%;
  }
  
  div#secondary {
    right: 8%;
  }
}
