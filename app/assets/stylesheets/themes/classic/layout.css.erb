body {
  padding: 0;
  margin: 0;
  text-align: center;
}

#mast {

}

  #search {
    position: fixed;
    top: 5.8em;
    left: 0;
    right: 0;
    z-index: 16;
  }

#content {
  padding: 9.5em 0 5em 0;
  overflow: hidden;
  min-height: 400px;
}

  div#primary {
    clear: both;
    position: relative;
    width: 67%;
    float: left;
    z-index: 12;
  }
  
    body#competition-index #primary,
    body#competition-index #secondary {
      width: auto;
      float: none;
    }

  div#secondary {
    position: fixed;
    top: 11em;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 11;
  }
  
#foot {
  clear: both;
}

  #foot p {
    margin: 0;
  }

div.inner,
h1 span,
#search form,
#navigation {
  display: block;
  padding: 0 64px 0 64px;
  margin: 0 auto;
  text-align: left;
  position: relative;
  max-width: 1024px;
  min-width: 320px;
  overflow: visible;
}

#foot .inner {
  padding-bottom: 24px;
}

div.page {
  padding: 0 10px;
  border-radius: 5px;
  background: rgba(255, 255, 255, 0.66);
  margin: 0 0 1em 0;
  border: 2px solid rgba(200, 200, 200, 0.1);
}

div.groups {
  overflow: hidden;
}

  div.group,
  div.day {
    padding: 0 5px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.5);
    margin: 0 0 1em 0;
    border: 2px solid rgba(200, 200, 200, 0.1);
    box-sizing: border-box;
  }
  
  div.group h2 {
    margin-top: 0;
    padding: 5px 5px 0 8px;
  }

  div.league_stage_with_groups div.group {
    float: left;
    width: 48%;
  }
  
	div.league_stage_with_groups div.odd {
    clear: both;
  }

  div.league_stage_with_groups div.even {
    float: right;
  }