table.standings,
table.games {
  margin: 0;
  clear: both;
  border-radius: 5px;
  box-sizing: border-box;
  max-width: 100%;
}

  table.nohead thead {
    display: none;
  }

  table thead th {
    text-align: left;
    font-size: 0.8em;
    color: #666;
    padding: 4px 6px;
  }

  table.games tfoot td,
  table.standings tfoot td {
    text-align: right;
  }

  table.games td,
  table.standings td {
    padding: 6px;
  }

  table.standings td.stat,
  table.standings th.stat {
    width: 6%;
    text-align: right;
    padding-right: 8px;
  }

  table.games tr.homewin td.home,
  table.games tr.awaywin td.away {
    font-weight: bold;
  }

  table.standings td,
  table.games td {
    border-top: 1px solid #EEE;
  }

  table tfoot td {
    border: none;
  }

  table tr.summary td {
    border-top: none;
    text-align: left;
    color: #666;
    font-size: smaller;
    padding: 2px 90px 8px 90px;
  }

  table tr.short td {
    text-align: center;
  }

  table tr.notes td {
    border-top: none;
    text-align: center;
    color: #666;
    font-size: smaller;
    padding: 0 0 3px 0;
  }

  table tr.auto-promote td,
  table tr.auto-relegate td  {
    font-weight: bold;
  }

  table tr.conditional-promote td,
  table tr.conditional-relegate td {
    font-style: italic;
  }

  table .pos {
    width: 2%;
    text-align: right;
  }

  table .versus {
    text-align: center;
    font-size: smaller; 
    width: 4%;
    padding: 4px;
  }

  table.results th.versus {
    width: 12%;
  }
  
  table.results .home {
    text-align: right;
  }

  table .hierarchy {
    text-align: right;
    white-space: nowrap;
    width: 12%;
  }

  .time {
    text-align: right;
  }

  table .when {
    width: 12%;
    text-align: left;
    white-space: nowrap;
  }

  table.games .home {
    text-align: right;
  }

  table.games .away {
    text-align: left;
  }

  tr.notes .home,
  tr.notes .away {
    width: 41%;
  }

  table .team {
    overflow: hidden;
    white-space: nowrap;
    width: 36%;
    text-overflow: ellipsis;
  }

  table .results .team {
    width: 31%;
  }

  table th.score {
    text-align: center;
  }
  
  table td.score {
    width: 5%;
    font-size: larger;
  }
