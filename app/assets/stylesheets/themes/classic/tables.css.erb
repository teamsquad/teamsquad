table {
  max-width: 100%;
  overflow: hidden;
}

td,
th {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

tbody tr:hover td,
tbody tr:hover th {
  background: #EFE;
  color: #333;
}

table.standings,
table.games {
  margin: 0 0 0.5em 0;
  clear: both;
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  border-bottom: 1px dotted #EEE;
}

table.standings {
  margin-top: 0.5em;
}

table.results {
  margin: 0.5em 0;
}

  table.nohead thead {
    display: none;
  }

  table thead th {
    text-align: left;
    font-size: 0.8em;
    color: #666;
    padding: 4px 6px;
  }

  table.games tfoot td,
  table.standings tfoot td {
    text-align: right;
  }

  table.games td,
  table.standings td {
    padding: 6px;
    border-top: 1px dotted #EEE;
  }

  table.standings td.stat,
  table.standings th.stat {
    width: 6%;
    text-align: right;
    padding-right: 8px;
  }

  table.games tr.homewin td.home,
  table.games tr.awaywin td.away {
    font-weight: bold;
  }

  table tfoot td {
    border: none;
  }

  table tr.summary td {
    text-align: left;
    color: #666;
    font-size: smaller;
    padding: 2px 90px 8px 90px;
  }

  table tr.short td {
    text-align: center;
  }

  table tr.notes td {
    text-align: center;
    color: #666;
    font-size: smaller;
    padding: 0 0 3px 0;
  }

  table tr.auto-promote td,
  table tr.auto-relegate td  {
    font-weight: bold;
  }
  
  table tr.auto-promote td {
    background: #F8FFF8;
  }

  table tr.auto-relegate td {
    background: #FFF8F8;
  }

  table .pos {
    width: 2%;
    text-align: right;
  }

  table .versus {
    text-align: center;
    font-size: smaller; 
    width: 4%;
    padding: 4px;
  }

  table.results th.versus {
    width: 12%;
  }
  
  table.results .home {
    text-align: right;
  }
  
  .time {
    text-align: right;
  }

  table .hierarchy {
    padding: 0.5em 0;
  }

  table .when,
  table .where {
    width: 7%;
    text-align: left;
    white-space: nowrap;
    color: #CCC;
  }

  table .when {
    padding-right: 0 !important;
  }

  table .where {
    padding-left: 0 !important;
  }
  
  table .when,
  table .where {
    display: none;
  }

  @media only screen and (min-height: 640px) {
    table .when,
    table .where {
      display: table-cell;
    }
  }

  table.games .home {
    text-align: right;
  }

  table.games .away {
    text-align: left;
  }

  tr.notes .home,
  tr.notes .away {
    width: 41%;
  }

  table .team {
    overflow: hidden;
    white-space: nowrap;
    width: 36%;
    text-overflow: ellipsis;
  }

  table .results .team {
    width: 31%;
  }

  table th.score {
    text-align: center;
  }
  
  table.results td.score {
    width: 5%;
    font-size: 1.2em;
    text-align: center;
    background: #F4F4F4;
    border: 2px solid #FFF;
    border-radius: 3px;
    font-family: 'Capriola', sans-serif;
    line-height: 1;
  }
