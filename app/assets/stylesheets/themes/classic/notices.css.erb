div.notices {
  padding-top: 1em;
}

  div.notice {
    clear: both;
    padding: 0 1em;
    margin-bottom: 3em;
    border-radius: 5px;
    background: #FFF;
    border: 2px solid #EEE;
  }

    div.notice h2 {
      margin-left: -50px;
      padding-left: 50px;
      background: url(<%= asset_data_uri 'large/notice.png' %>) no-repeat left;
      line-height: 1.2em;
      margin-bottom: 0.4em;
    }
  
    div.notice p {
      text-align: justify;
    }
  
    div.notice div.image {
      float: right;
      margin: 0 0 0.5em 1em;
      border: 1px solid #CCC;
      padding: 3px;
    }

      div.notice div.image img {
        display: block;
      }
      
div.comments {
  
}

  div.comment {
    clear: both;
  }
  
  div.comment h3 {
    width: 24%;
    float: left;
    text-align: right;
    margin: 0.4em 0 0 0;
  }
  
  div.comment h3 span {
    font-size: 0.75em;
    color: #999;
    display: block;
  }

  div.comment .message {
    width: 74%;
    float: right;
    border-radius: 5px;
    background: #FFF;
    border: 2px solid #EEE;
    padding: 10px;
    box-sizing: border-box;
    margin: 0 0 1em 0;
  }
  
  div.comment .message p {
    margin: 0;
  }