<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta http-equiv="Content-Language" content="en-gb">
<meta name="copyright" content="(c) Copyright 2005 Stephen Latter">
<title><%= h @titles.join(' - ') %></title>
<link href="/stylesheets/screen.css" rel="Stylesheet" type="text/css" media="screen"><% for script in @scripts %>
<script src="/javascripts/<%= script %>.js" type="text/javascript"></script><% end %>
<%= javascript_include_tag :defaults %>
<style type="text/css" media="screen">
<% if @organisation.sport_id < 6 %>body {
	background-image: url(/images/sport<%= @organisation.sport_id %>.jpg);
}<% end %>
<% if @organisation.has_logo? %>h1 {
	background: url(/uploads/<%= "organisation/logo/#{@organisation.id}/#{@organisation[:logo]}" %>) no-repeat top left;
}<% end %>
</style>
<%= csrf_meta_tags %>
