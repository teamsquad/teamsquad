<label for="<%= "#{formfield.class.name.downcase}_#{name}" %>"><%= label %></label>
<p class="hint"><%= formfield.hint(name) %></p>
<% if formfield.errors[name]; for error in formfield.errors[name]; -%>
<p class="warning"><%= error %></p><% end; end; -%>
<%= form_input fieldtype, formfield.class.name.downcase, name %>

