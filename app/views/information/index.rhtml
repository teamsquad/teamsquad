<div id="primary">
  <%= safely_display @organisation.summary %>
</div>

<div id="secondary">
  <% if authorised? %><h2>Edit organisation</h2>
  <ul class="current">
    <li class="admin"><%= link_to "Edit organisation details...", edit_organisation_url() %></li>
  </ul><% end %>
  
  <h2>More</h2>
  <ul class="current">
    <li><%= link_to_unless_current "Information", information_url %></li><% for page in @pages %>
    <li><%= link_to_unless_current page.label_or_title, information_page_url(:page => page) %></li><% end %>
    <% unless authorised? -%>
    <li><%= link_to('New page...', new_information_page_url, {:class => 'admin'}) %></li>
    <% end %>
  </ul>
  
  <h2>All done?</h2>
  <ul>
    <li><%= link_to "Back home", home_url %></li>
  </ul>
</div>