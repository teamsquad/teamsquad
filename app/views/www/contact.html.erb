<div id="blurb">
<h1>Contact</h1>
<% unless @contactresponse.errors.empty? %><p class="warning">Sorry, that's just not good enough</p><% end %>
<p>Want to get in touch? use this form then!</p>
</div>

<div id="focus">
<form action="/contact" method="post" class="standard">
	
	<fieldset>
		<legend>Get in touch...</legend>
		<%= form_field @contactresponse, "text", "name", "Your name" %>

		<%= form_field @contactresponse, "text", "email", "Your email address (optional)" %>

		<%= form_field @contactresponse, "textarea", "message", "Your message" %>
	</fieldset>

	<fieldset class="finish">
		<legend>Submit your registration</legend>
		<p>
		  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		  <input type="submit" value="Send">
		</p>
	</fieldset>
</form>
</div>