<% unless @form.errors.empty? -%>
<p class="warning">Sorry, but that's just not good enough.</p>
<% end %>
<form action="<%= request.fullpath %>" method="post" class="standard">
  <fieldset>
    <legend>Details...</legend>
  
    <label for="in-title">Season title</label>
    <p class="hint">Something like '2006-7' or 'Winter 2006'.</p>
    <%= error_message_on "form", "title", "Title " %>
    <p class="input"><%= text_field "form", "title", :class => 'important textfield', :id => 'in-title' %></p>
  </fieldset>

  <fieldset class="finish">
    <legend>Finish up</legend>
    <input type="submit" value="Save changes">
  </fieldset>
</form>