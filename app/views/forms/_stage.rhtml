<% unless stage.errors.empty? -%>
<p class="warning">Sorry, but that's just not good enough.</p>
<% end -%>
<form action="" method="post" class="standard">
	<fieldset>
		<legend>Details...</legend>
		
		<label for="in-title">Stage title</label>
		<p class="hint">This is simply the name of the stage. Only use
		alphanumerics, spaces, and hyphens in the title. If this is a 
		simple one stage league then name it something like 'league'.</p>
		<%= error_message_on "stage", "title" %>
		<p><%= text_field "stage", "title", :class => 'textfield', :id => 'in-title' %></p>
		
		<label for="in-is_knockout">Cup competition?</label>
		<p class="hint">If this stage is in a knockout format then tick the box.
		If the stage is a league then leave the box unticked.</p>
		<%= error_message_on "stage", "is_knockout" %>
		<p><%= check_box "stage", "is_knockout", :class => 'checkbox', :id => 'in-is_knockout' %></p>
		
	</fieldset>
	
	<fieldset id="set-points">
		<legend>Points</legend>
		
		<label for="in-points_for_win">Win points</label>
		<p class="hint">How many points does a team get if they win?</p>
		<%= error_message_on "stage", "points_for_win" %>
		<p><%= text_field "stage", "points_for_win", :class => 'textfield', :id => 'in-points_for_win' %></p>

		<label for="in-points_for_draw">Draw points</label>
		<p class="hint">How many points does a team get if they draw?</p>
		<%= error_message_on "stage", "points_for_draw" %>
		<p><%= text_field "stage", "points_for_draw", :class => 'textfield', :id => 'in-points_for_draw' %></p>
		
		<label for="in-points_for_loss">Loss points</label>
		<p class="hint">How many points does a team get if they lose?</p>
		<%= error_message_on "stage", "points_for_loss" %>
		<p><%= text_field "stage", "points_for_loss", :class => 'textfield', :id => 'in-points_for_loss' %></p>
	</fieldset>
	
	<fieldset id="set-promotion_and_relegation">
		<legend>Up and down</legend>
		
		<label for="in-automatic_promotion_places">Auto promotion</label>
		<p class="hint">How many teams are automatically promoted? Enter in a
		numerical value.</p>
		<%= error_message_on "stage", "automatic_promotion_places" %>
		<p><%= text_field "stage", "automatic_promotion_places", :class => 'textfield', :id => 'in-automatic_promotion_places' %></p>
		
		<label for="in-conditional_promotion_places">Other promotion</label>
		<p class="hint">How many teams are conditionally promoted (e.g. after play-offs)?
		Enter in a numerical value.</p>
		<%= error_message_on "stage", "conditional_promotion_places" %>
		<p><%= text_field "stage", "conditional_promotion_places", :class => 'textfield', :id => 'in-conditional_promotion_places' %></p>

		<label for="in-automatic_relegation_places">Auto relegation</label>
		<p class="hint">How many teams are automatically relegated? Enter in a
		numerical value.</p>
		<%= error_message_on "stage", "automatic_relegation_places" %>
		<p><%= text_field "stage", "automatic_relegation_places", :class => 'textfield', :id => 'in-automatic_relegation_places' %></p>

		<label for="in-conditional_relegation_places">Other relegation</label>
		<p class="hint">How many teams are conditionally relegated (e.g. after play-offs)?
		Enter in a numerical value.</p>
		<%= error_message_on "stage", "conditional_relegation_places" %>
		<p><%= text_field "stage", "conditional_relegation_places", :class => 'textfield', :id => 'in-conditional_relegation_places' %></p>
	</fieldset>

	<fieldset class="finish">
		<legend>Finish up</legend>
		<input type="submit" value="Save stage">
	</fieldset>
</form>